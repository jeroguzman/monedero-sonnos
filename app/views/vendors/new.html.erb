<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-5  toppad  pull-left col-md-offset-3 ">
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
      <div class="panel panel-info">
        <div class="panel-heading">
          <% if flash[:vendor_error] %>
            <div class="alert alert-danger">
              <strong>Formulario incorrecto:</strong>
            </div>
          <% end %>
          <%= form_for @vendor do |f| %>
            <div class="form-group">
              <%= f.label :name, "Nombre de usuario" %>:
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, "Correo Electronico" %>:
              <%= f.text_field :email, class: "form-control" %>
            </div>
            <%= f.submit "Registrar nuevo usario", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
