<h1>Editing Balance Information</h1>
<div class="container-fluid">
  <div class="row-fluid">
        <% if flash[:invalid] %>
          <div class="alert alert-warning">
            <strong>Campos invalidos</strong>
          </div>
        <% end %>
        <%= form_for @balance_information, url: client_balance_balance_information_path, method: :put do |f| %>
          <div class="table table-responsive">
          <div class="col-md-4">
          <div class="input-group form-control">
            <%= f.label :amount, "Cantidad", class: 'form-control' %>
            <%= f.text_field :amount, class:'form-control'%>
          </div>
          <div class="input-group form-control">
            <%= f.label :note_number, "Nota de venta", class: 'form-control' %>
            <%= f.text_field :note_number, class:'form-control'%>
          </div>
          <div class="input-group-addon">
          <%= fields_for @percent_catalog do |percent_catalog_form| %>
            <br> <%= percent_catalog_form.label :percent, "Porcentaje" %> </br>
            <%= percent_catalog_form.select :percent, @percent_catalogs.collect {|p| [ p.percent, p.id ] }, class:'form-control' %>
          <% end %> 
        <br>  <%= f.submit "Editar", class:'btn btn-primary'  %> </br>
        <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
