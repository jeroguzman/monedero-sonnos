<div class="container-fluid">
  <div class="row-fluid">
    <div class="table table-responsive">
      <div class="col-md-4">
        <table class="table table-user-information">
          <tbody>
            <h2>El cliente <%= @client.client_number %> : </h2>
            <tr>
              <td>Cantidad:</td>
              <td><%= @balance_information.amount %></td>
            </tr>
            <tr>
              <td>Nota de compra:</td>
              <td><%= @balance_information.note_number %></td>
            </tr>
            <tr>
              <td>Puntos:</td>
              <td><%= @balance.point %></td>
            </tr>
            <tr>
              <td>Vendedor:</td>
              <td><%= @balance.vendor.name %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
