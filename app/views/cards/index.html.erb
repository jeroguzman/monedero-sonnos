<p id="notice"><%= notice %></p>

<h1>Tarjetas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Porcentaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.percent %></td>
        <td><%= link_to 'Ver', card %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva tarjeta', new_card_path %>
